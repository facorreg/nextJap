{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "utils": [
        "src/utils/index"
      ],
      "apollo": [
        "src/apollo/index"
      ],
      "queries": [
        "src/apollo/queries/index"
      ],
      "fragments": [
        "src/apollo/fragments/index"
      ],
      "components/*": [
        "src/components/*"
      ],
      "context": [
        "src/context/index"
      ],
      "HoC": [
        "src/HoC/index"
      ],
      "cpages/*": [
        "src/components/pages/*"
      ],
      "static": [
        "src/static/index",
        "src/static/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}